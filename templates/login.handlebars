<h1>Welcome to RooMIT!</h1>
<h4>Find your perfect MIT roommate</h4>
<br>

<!-- error handling -->
<p id='error' class='text-danger'></p>

<form id='login-form' class='login-form'>
    <div class='form-group'>
        <input type='checkbox' id='toggle-register'> <label>Make a new account</label>
        <br>
        <input type='email' class='form-control' id='email' name='email' placeholder='Enter email' required autofocus>
        <input type='password' class='form-control' id='password' name='password' placeholder='Enter password' required>
        <input id='submit-login' type='submit' class='btn btn-large btn-primary btn-block' value='Login'>
        <input type='hidden' name='_csrf' value={{token}}>
    </div>
</form>